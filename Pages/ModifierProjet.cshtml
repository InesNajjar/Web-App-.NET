    <div class="content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-md-12">
                    <div class="card">
                        <div class="card-header card-header-icon card-header-rose">
                            <div class="card-icon">
                                <i class="material-icons">add_to_queue</i>
                            </div>
                            <h4 class="card-title">
                                Ajouter un nouveau projet
                            </h4>
                        </div>
                        <div class="card-body">
                            <form method="post" asp-action="Create" enctype="multipart/form-data">
                                <input asp-for="projet.IdP" type="hidden" />

                                <div class="row">
                                    <div class="col-md-5">
                                        <div class="form-group">
                                            <label class="bmd-label-floating">Nom du projet</label>
                                            <input asp-for="projet.Name" type="text" class="form-control">
                                        </div>
                                    </div>
                                    <div class="col-md-3">
                                        <div class="form-group">
                                            <select asp-for="Input.ClientName" class="selectpicker" data-style="select-with-transition" title="Proposé par">
                                                @foreach (var item in Model.getClientName())
                                                {
                                                    <option value="@item">@item</option>
                                                }
                                            </select>
                                        </div>
                                    </div>
                                    <div class="col-md-4">
                                        <div class="form-group">
                                            <select asp-for="Input.CompanyName" class="selectpicker" data-style="select-with-transition" title="Elaboré par">
                                                @foreach (var item in Model.getCompanyName())
                                                {
                                                    <option value="@item">@item</option>
                                                }
                                            </select>
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label class="bmd-label">Date de début</label>
                                            <input type="date" asp-for="projet.DateBegin" class="form-control datetimepicker">
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label class="bmd-label">Date de fin</label>
                                            <input type="date" asp-for="projet.DateFinish" class="form-control datetimepicker">
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-12">
                                        <div class="form-group">
                                            <label class="bmd-label-floating">Temps Estimé par heure</label>
                                            <input type="number" asp-for="projet.TimeEstimated" class="form-control">
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-4">
                                        <div class="form-group">
                                            <select asp-for="projet.State" class="selectpicker" data-style="select-with-transition" title="Etat du projet">

                                                <option value="Nouveau">Nouveau</option>
                                                <option value="En cours">En cours</option>
                                                <option value="Fini">Fini</option>

                                            </select>
                                        </div>
                                    </div>
                                    <div class="col-md-4">
                                        <div class="form-group">
                                            <label class="bmd-label-floating">Temps passé par heure</label>
                                            <input type="number" asp-for="projet.TimeSpent" class="form-control">
                                        </div>
                                    </div>
                                    <div class="col-md-4">
                                        <div class="form-group">
                                            <label class="bmd-label-floating">% progression du projet</label>
                                            <input type="number" asp-for="projet.ProgressPercent" max="100" min="0" class="form-control">
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-12">
                                        <div class="form-group">
                                            <label>Déscription</label>
                                            <div class="form-group">
                                                <label class="bmd-label-floating">Description en détails du projet.</label>
                                                <textarea class="ckeditor" rows="5" asp-for="projet.Details"></textarea>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-4">

                                        <div class="fileinput fileinput-new text-center" data-provides="fileinput">
                                            <div class="fileinput-new thumbnail">
                                                <img src="../../assets/img/image_placeholder.jpg" alt="...">
                                            </div>
                                            <div class="fileinput-preview fileinput-exists thumbnail"></div>
                                            <div>
                                                <span class="btn btn-rose btn-round btn-file">
                                                    <span class="fileinput-new">Ajouter une image</span>
                                                    <span class="fileinput-exists">Changer</span>
                                                    <input type="file" name="file" />
                                                </span>
                                                <a class="btn btn-danger btn-round fileinput-exists" data-dismiss="fileinput"><i class="fa fa-times"></i>Supprimer</a>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <button type="submit" class="btn btn-rose pull-right">Enregistrer</button>
                                <a class="btn btn-default" href="/GestionProjet">Annuler</a>
                                <div class="clearfix"></div>
                            </form>
                        </div>
                    </div>
                </div>
                <script src="https://cdn.ckeditor.com/4.12.1/standard/ckeditor.js"></script>
            </div>
        </div>
    </div>

</div>